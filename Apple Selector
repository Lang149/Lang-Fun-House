MacBook_Air_M1 = MacBook_Air_M1()
MacBook_Air_M2_13_inch = MacBook_Air_M2_13_inch()
MacBook_Air_M2_15_inch = MacBook_Air_M2_15_inch()
MacBook_Pro_13_inch_M2 = MacBook_Pro_13_inch_M2()
MacBook_Pro_14_inch_M2_Pro = MacBook_Pro_14_inch_M2_Pro()
MacBook_Pro_14_inch_M2_Max = MacBook_Pro_14_inch_M2_Max()
MacBook_Pro_16_inch_M2_Pro = MacBook_Pro_16_inch_M2_Pro()
MacBook_Pro_16_inch_M2_Max = MacBook_Pro_16_inch_M2_Max()
iMac_24_inch_M1 = iMac_24_inch_M1()
iMac_24_inch_M1_512GB = iMac_24_inch_M1_512GB()
Mac_Mini_M2 = Mac_Mini_M2()
Mac_Mini_M2_Pro = Mac_Mini_M2_Pro()
Mac_Studio_M1_Max = Mac_Studio_M1_Max()
Mac_Studio_M1_Ultra = Mac_Studio_M1_Ultra()
Mac_Pro_M2_Ultra = Mac_Pro_M2_Ultra()

computers = ("1) MacBook Air", '2) MacBook Pro', "3) iMac", "4) MacPro", "5) Mac Mini", "6) Mac Studio")

Flag = True
while Flag:
    you = input("Hello, user, are you looking for an Apple product? y/n? ")
    you = you.capitalize()
    if you == "Y" or you == "YES":
        for computer in computers:
            print(computer)
        selection = input("Please check out our selection. Choose number from 1-6: ")
        if selection == "1":
            MacBook_Air_M1.print_specs()
            MacBook_Air_M2_13_inch.print_specs()
            MacBook_Air_M2_15_inch.print_specs()
        elif selection == "2":
            MacBook_Pro_13_inch_M2.print_specs()
            MacBook_Pro_14_inch_M2_Max.print_specs()
            MacBook_Pro_16_inch_M2_Pro.print_specs()
            MacBook_Pro_16_inch_M2_Max.print_specs()
        elif selection == "3":
            iMac_24_inch_M1.print_specs()
            iMac_24_inch_M1_512GB.print_specs()
        elif selection == "4":
            Mac_Pro_M2_Ultra.print_specs()
        elif selection == "5":
            Mac_Mini_M2.print_specs()
            Mac_Mini_M2_Pro.print_specs()
        elif selection == "6":
            Mac_Studio_M1_Max.print_specs()
            Mac_Studio_M1_Ultra.print_specs()


    elif you == "N" or you == "NO":
        print("Thank you for checking out our Apple Store. Goodbye!")
        break
    else:
        print("This is not a valid answer. Please rerun the code.")
        break
