class Computer:
    def __init__(self, name, cpu, gpu, memory, storage, money):
        self.name = name
        self.cpu = cpu
        self.gpu = gpu
        self.memory = memory
        self.storage = storage
        self.money = f"${money}"

    def print_specs(self):
        print(f"ITEM: {self.name}")
        print(f"CPU: {self.cpu}\nGRAPHICS: {self.gpu}\nRAM: {self.memory}\nSTORAGE: {self.storage}\nCost: {self.money}")
        print()


# MacBook Air models
class MacBook_Air_M1(Computer):
    def __init__(self):
        super().__init__(
            name="MacBook Air M1",
            cpu="Apple M1, 8-core CPU",
            gpu="Apple M1, 7-core GPU",
            memory="8GB",
            storage="256GB SSD",
            money=999
        )


